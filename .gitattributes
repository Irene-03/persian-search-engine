# Auto detect text files and perform LF normalization
* text=auto

# Python files
*.py text eol=lf
*.pyw text eol=lf

# Shell scripts
*.sh text eol=lf

# Config files
*.yaml text eol=lf
*.yml text eol=lf
*.json text eol=lf
*.toml text eol=lf

# Docker files
Dockerfile text eol=lf
*.dockerignore text eol=lf

# Documentation
*.md text eol=lf
*.txt text eol=lf

# Windows specific
*.bat text eol=crlf
*.ps1 text eol=crlf
